@model Country

@using (Html.BeginForm("Delete", "Countries", FormMethod.Post))
{
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.TotalWinnerBattles)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.TotalWinnerBattles)
    </dd>
    <dt class="col-sm-12">
        Zostaną również usunięte poniższe bitwy:
    </dt>
    @foreach (var item in Model.Battles)
    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => item.Name)
        </dd>
    }
    @if (Model.Battles.Count() == 0)
    {
        <dd class="col-sm-12">
            Brak bitew
        </dd>
    }
</dl>

    <input type="submit" value="Usuń" class="btn btn-danger" />
}