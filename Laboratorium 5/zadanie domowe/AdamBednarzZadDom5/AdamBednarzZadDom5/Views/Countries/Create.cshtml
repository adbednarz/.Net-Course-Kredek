@model Country


@using (Html.BeginForm("Create", "Countries", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        <div class="col-md">
            @Html.TextBoxFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TotalWinnerBattles)
        <div class="col-md">
            @Html.TextBoxFor(model => model.TotalWinnerBattles)
        </div>
    </div>

    <input type="submit" value="Dodaj kraj" class="btn btn-primary" />
}