@model Battle


@using (Html.BeginForm("Delete", "Battles", FormMethod.Post))
{
    <h3>Czy na pewno chcesz usunąć poniższy rekord?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @{
                var AgeName = Model.Age.Name;
                @Html.DisplayFor(name => AgeName);
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @{
                var CountryName = Model.Country.Name;
                @Html.DisplayFor(name => CountryName);
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commander)
        </dt>
        <dd class="col-sm-10">
            @{
                var CommanderName = Model.Commander.Name + " " + Model.Commander.Surname;
                @Html.DisplayFor(name => CommanderName);
            }
        </dd>
    </dl>

    <input type="submit" value="Usuń" class="btn btn-danger" />
}
