@model Commander

@using (Html.BeginForm("Delete", "Commanders", FormMethod.Post))
{
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Surname)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Surname)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-12">
        Zostaną również usunięte poniższe bitwy:
    </dt>
    @foreach (var item in Model.Battles)
    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => item.Name)
        </dd>
    }
    @if (Model.Battles.Count() == 0) 
    {
        <dd class="col-sm-12">
            Brak bitew
        </dd>
    }
</dl>

    <input type="submit" value="Usuń" class="btn btn-danger" />
}